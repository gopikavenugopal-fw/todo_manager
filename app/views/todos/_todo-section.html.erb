<section class="TodoSection">
<div class="Todosection-title">
    <p class="Todosection-title-text"> <%= section_title %></p>
    <p class="Todosection-remaining"><%= todos.completed.count %> / <%= todos.count %></p>
</div>
<ul>
<% todos.all.each do |todo|%>
    <li class="Todo-todo">
        <label class="Todosection-container">
        <%= form_with(url: "/todos/#{todo.id}", method: "put") do %>
            <input type="checkbox" <%= todo.completed ? "checked" : " "%> 
                name="completed" 
                onclick="this.form.submit()" 
            /> 
            
        <%end%>
        <p class="<%= todo.completed ? "Todo-completed" : " " %>"> <%= todo.todo_text%> </p>
         </label> 
    </li>

<% end %>
</ul>
</section>
        